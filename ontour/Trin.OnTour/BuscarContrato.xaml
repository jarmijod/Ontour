<Page x:Class="Trin.OnTour.BuscarContrato"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Trin.OnTour"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BuscarContrato">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4.5*"/>
            <RowDefinition Height="1.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="CbSexo" Grid.Row="0" Grid.Column="0" Margin="20 10 40 10"/>

        <Button x:Name="BTN_volver" Grid.Row="2" Grid.Column="0" Content="Volver" Margin="20 10 40 10" Click="Button_Click"/>
        <Button x:Name="BTN_verC" Grid.Row="2" Grid.Column="2" Content="Ver Clientes" Margin="20 10 40 10" Click="Button_Click"/>

        <Label Grid.Row="0" Grid.Column="1" Content="Contratos" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="44"/>

        <DataGrid x:Name="DtgClientes" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="40 20" BorderThickness="1"/>
    </Grid>
</Page>
